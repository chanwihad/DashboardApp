@{
    ViewData["Title"] = "Change Password";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-form">
            <h1>CHANGE PASSWORD</h1>
            <form method="post" action="/Auth/ChangePassword">
                <input type="password" name="CurrentPassword" placeholder="Current Password" required />
                <input type="password" name="NewPassword" placeholder="New Password" required />
                <input type="password" name="ConfirmNewPassword" placeholder="Confirm New Password" required />
                <button type="submit" class="login-btn">CHANGE PASSWORD</button>
            </form>
            @if (ViewBag.Error != null)
            {
                <p class="error">@ViewBag.Error</p>
            }
            @if (ViewBag.Success != null)
            {
                <p class="success">@ViewBag.Success</p>
            }
            
        </div>
        <div class="login-banner">
            <img src="~/images/login.png" alt="Login Banner" />
        </div>
    </div>
</div>